<div class="container space-from-top">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-sm-12">
      <div class="card">
        <div class="card-header bg-danger text-white text-center"><h4>INSCRIPTION</h4></div>
        <div class="card-body">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
          
            <div class="field">
              <%= f.label :Email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
          
            <div class="field">
              <%= f.label :"mot de passe" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>
          
            <div class="field">
              <%= f.label :"Confirmer mot de passe" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>
          
            <div class="actions">
              <%= f.submit "INSCRIPTION", class: "btn btn-danger" %>
            </div>
          <% end %>
          
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
  


